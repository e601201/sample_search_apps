<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
    <p>
      <%= link_to "Show this post", post %>
    </p>
  <% end %>
</div>
<%= link_to "New post", new_post_path %>

<h1>検索</h1>
<p>空欄で区切ると複数検索できます</p>
<%= form_with model: @search_posts_form, url: posts_path, method: :get, scope: :q,local: true do |f| %>
  <%= f.label :title %>
  <%= f.search_field :title %>
  <%= f.label :body %>
  <%= f.search_field :body %>
  <%= f.label :status %>
  <%= f.select :status, Post.statuses,{include_blank: "選択してください"} %> 
  <%= f.submit "検索！！" %>
<%end%>
