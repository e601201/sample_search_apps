<p style="color: green"><%= notice %></p>

<h1>Users Page</h1>

<div id="users">
  <% @users.each do |user| %>
    <%= render user %>
    <p>
      <%= link_to "Show this user", user %>
    </p>
  <% end %>
</div>

<%= link_to "New user", new_user_path %>

<h1>検索</h1>
<%= search_form_for @q do |f| %>
  
  <%= f.label :name_cont %>
  <%= f.search_field :name_cont %> | 
  <%= f.label :name_start %>
  <%= f.search_field :name_start %> | 
  <%= f.label :content_cont %>
  <%= f.search_field :content_cont %> | 
  <%= f.label :content_start %>
  <%= f.search_field :content_start %> | 
  <%= f.label :age_eq %>
  <%= f.select :age_eq, (10..30) , {include_blank: "選択してください"} %> | 
  <%= f.label :age_gteq %>
  <%= f.select :age_gteq, {"10歳以上" => 10,"20歳以上" => 20,"30歳以上" => 30 } , {include_blank: "選択してください"} %>
  <%= f.label :sex_eq %>
  <%= f.select :sex_eq, User.sexes.keys , {include_blank: "選択してください"} %> | 

  <%= f.submit %>
<% end %>

<%= link_to "Back To Top", root_path%>
